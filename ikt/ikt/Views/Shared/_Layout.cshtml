<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400" rel="stylesheet">

    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>

    <title>@ViewBag.Title - @Constants.SiteName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{
        if (!Login.CheckIfValidUser(User.Identity.Name))
        {
            Response.Redirect(Url.Action("SignOut", "Account"));
        }
        else
        {
            ViewBag.Staff = Login.GetStaffInfo(User.Identity.Name);
            if (ViewBag.Staff.Username == "invalid")
            {
                Response.Redirect(Url.Action("Create", "Staffs", new { Username = User.Identity.Name.Split('@')[0] }));
            }
        }
    }

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/">
                    <img class="loggo" src="~/Content/WebImages/Loggo.png" alt="logga" width="55" height="40" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fas fa-plus dropdownFasCreate"></i> Lägg till
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Create", "Projects")"><i class="fas fa-file-alt dropdownFas"></i> Projekt</a></li>
                            <li><a href="@Url.Action("Create", "Ikts")"><i class="fas fa-cogs dropdownFas"></i> Verktyg</a></li>
                        </ul>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="spacer"></div>
    <footer>
        <div class="container">
            <div class="row">
                <p class="footerText col-xs-12 col-sm-12 col-md-3 col-lg-3">&copy; @DateTime.Now.Year - @Constants.SiteName</p>
                <p class="footerText col-xs-12 col-sm-12 col-md-3 col-lg-3">T4</p>
                <p class="footerText col-xs-12 col-sm-12 col-md-3 col-lg-3">Tillämpad Programmering</p>
                <p class="footerText col-xs-12 col-sm-12 col-md-3 col-lg-3"><a href="https://github.com/t4ed/ikt-inventering" target="_blank"><i class="fab fa-github"></i> Github Projektsida</a></p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.4/js/standalone/selectize.js"></script>
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
