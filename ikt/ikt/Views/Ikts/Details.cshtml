@model ikt.ViewModels.IktDetailsViewModel

@{
    ViewBag.Title = "Details";
}



<h2 id="vDetails_Headline">@Html.DisplayFor(model => model.Ikt.Name)</h2>
<hr />
<div class=" col-md-12">

    <div class="col-md-3">
        <dt>
            @Html.DisplayNameFor(model => model.Ikt.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ikt.Name)
        </dd>
        <dt>
            Lärare
        </dt>
        @foreach (var staff in Model.IktStaff)
        {
            <dd>
                @staff.Staff.FirstName @staff.Staff.LastName
            </dd>
        }
        <dt>
            Klasser
        </dt>
        @foreach (var klass in Model.IktClass)
        {
            <dd>
                @klass.Class.Name
            </dd>
        }
        <dt>
            @if (!string.IsNullOrEmpty(Model.Ikt.Link))
            {
                @Html.Display("Länkar");
            }
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ikt.Link)
        </dd>

        </dl>

    </div>
    <div class="col-md-9">
        <dt>
            @Html.DisplayNameFor(model => model.Ikt.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ikt.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ikt.Comment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ikt.Comment)
        </dd>

    </div>
</div>

<div class="row">

</div>
<hr />
<div class="col-md-12">
    @Html.ActionLink("Tillbaka", "Index", "Home", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.Ikt.ID }, new { @class = "btn btn-default" })
</div>
